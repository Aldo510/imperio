<div class="w-full max-w-[1440px] mx-auto mt-20">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Jugadores" %>

  <div class="flex flex-col items-center">
    <h1 class="font-bold text-4xl text-stone-900 dark:text-white mb-4">Jugadores</h1>
    <div class="flex space-x-4">
      <%= link_to "Nuevo jugador", new_player_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium hover:bg-blue-900" %>
      <%= link_to "Ver PDF de jugadores", download_pdf_players_path, class: "rounded-lg py-3 px-5 bg-green-600 text-white font-medium hover:bg-green-900", target: "_blank" %>
    </div>
  </div>

  <div id="players" class="min-w-full p-6 bg-gray-100 dark:bg-stone-900 rounded-lg shadow-md">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @players.each do |player| %>
        <%= render player %>
      <% end %>
    </div>
  </div>

</div>
