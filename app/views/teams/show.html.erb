<div class="mx-auto md:w-3/5 w-full mt-20 pt-5">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render @team %>

  <div class="flex gap-4 mt-8">
    <%= link_to "Editar equipo", edit_team_path(@team), class: "bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded" %>
    <%= link_to "Volver a equipos", teams_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded" %>
    <%= button_to "Borrar equipo", @team, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-medium py-2 px-4 rounded" %>
  </div>
</div>