<%= form_with model: school, local: true, class: "contents" do |form| %>
  <% if school.errors.any? %>
    <div class="mb-4 bg-red-100 border border-red-400 text-red-700 p-4 rounded">
      <h2 class="font-bold">Errores:</h2>
      <ul>
        <% school.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label 'Nombre', class: "text-stone-900 dark:text-white" %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", required: true %>
  </div>
  
  <div class="mb-4">
    <%= form.label 'Descripcion corta', class: "text-stone-900 dark:text-white" %>
    <%= form.text_area :description, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label 'Informes', class: "text-stone-900 dark:text-white" %>
    <%= form.text_area :info, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label 'Horarios', class: "text-stone-900 dark:text-white" %>
    <%= form.text_area :schedules, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label 'Ubicacion', class: "text-stone-900 dark:text-white" %>
    <%= form.text_field :location, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :monthly_fee, class: "text-stone-900 dark:text-white" %>
    <%= form.number_field :monthly_fee, step: 0.01, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :images, class: "text-stone-900 dark:text-white" %>
    <%= form.file_field :images, multiple: true, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", required: true %>
  </div>

  <div>
    <%= form.submit 'Crear escuela', class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>
<% end %>